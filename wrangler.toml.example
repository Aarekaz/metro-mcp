name = "metro-mcp"
main = "src/index.ts"
compatibility_date = "2024-12-18"
workers_dev = true

# KV Namespaces for OAuth client registration
# Create these with: bunx wrangler kv namespace create "OAUTH_CLIENTS"
# Create preview with: bunx wrangler kv namespace create "OAUTH_CLIENTS" --preview
[[kv_namespaces]]
binding = "OAUTH_CLIENTS"
id = "your-kv-namespace-id-here"
preview_id = "your-preview-kv-namespace-id-here"

# Environment variables
[vars]
# Replace these with your actual values:
WMATA_API_KEY = "your-wmata-api-key-here"
GITHUB_CLIENT_ID = "your-github-oauth-app-client-id"
GITHUB_CLIENT_SECRET = "your-github-oauth-app-client-secret"
JWT_SECRET = "generate-with-openssl-rand-hex-32"
OAUTH_REDIRECT_URI = "https://your-subdomain.workers.dev/callback"

